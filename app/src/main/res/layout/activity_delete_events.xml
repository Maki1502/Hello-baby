<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkBoxContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rozBack"
    android:orientation="vertical"
    tools:context=".DeleteEvents">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/shape"
            app:titleTextColor="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/smaticsc"
                android:text="HELLoBABY"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="55dp" />

        </androidx.appcompat.widget.Toolbar>

        <ImageButton
            android:id="@+id/del_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/delete"
            android:drawableBottom="@drawable/delete" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/smaticb"
            android:text="@string/twoje_zap"
            android:textColor="@color/black"
            android:textSize="32sp" />

    </LinearLayout>

</LinearLayout>