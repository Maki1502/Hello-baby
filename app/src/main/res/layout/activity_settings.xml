<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rozBack"
    tools:context=".SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/shape"
            app:titleTextColor="@color/white" />

        <TextView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/smaticsc"
            android:text="HELLoBABY"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="55dp" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Zmień dane"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="45dp"
            android:text="Zaimki:"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/txt"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@+id/txt1"
            android:backgroundTint="@color/rozTint2"
            app:cardCornerRadius="18dp">

            <Spinner
                android:id="@+id/zaimki_spin2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:entries="@array/zaimki" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="45dp"
            android:text="Wiek:"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/card1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@+id/txt2"
            android:backgroundTint="@color/rozTint2"
            app:cardCornerRadius="18dp">

            <Spinner
                android:id="@+id/wiek_spin2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:entries="@array/wiek" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="45dp"
            android:text="Płeć:"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/card2"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@+id/txt3"
            android:backgroundTint="@color/rozTint2"
            app:cardCornerRadius="18dp">

            <Spinner
                android:id="@+id/plec_spin2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:entries="@array/plec" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card4"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/card3"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/rozTint2"
            app:cardCornerRadius="18dp">

            <Spinner
                android:id="@+id/bb_spin2"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:entries="@array/bb" />

        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/bb_name2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/card3"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@id/card4"
            android:hint="Nazwa płodu..."
            android:inputType="text"
            android:maxLength="20"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/save2_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bb_name2"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="@color/roz"
            android:text="Zapisz"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/calc2_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/save2_btn"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="@color/roz"
            android:text="Zmień datę miesiączki/porodu"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/logout_profile_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/calc2_btn"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/roz"
            android:text="Wyloguj"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <Button
            android:id="@+id/destruction_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logout_profile_btn"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/roz"
            android:text="Wyczyść dane"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </RelativeLayout>

</ScrollView>